<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/copaBege"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/b_listapartidas"
        android:layout_width="292dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="9dp"
        android:contentDescription="@string/botoes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_semtaca"
        app:srcCompat="@drawable/bpart" />

    <ImageView
        android:id="@+id/logo_semtaca"
        android:layout_width="318dp"
        android:layout_height="0dp"
        android:layout_marginEnd="67dp"
        android:layout_marginStart="67dp"
        android:layout_marginTop="3dp"
        android:contentDescription="@string/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logorussia" />

    <ImageView
        android:id="@+id/b_curiosidades"
        android:layout_width="248dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="9dp"
        android:contentDescription="@string/botoes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_listapartidas"
        app:srcCompat="@drawable/bcuriosidades" />

    <ImageView
        android:id="@+id/b_paisesparticipantes"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="19dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/botoes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_curiosidades"
        app:srcCompat="@drawable/b_paisesparticipantes" />

    <ImageView
        android:id="@+id/b_calendario"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="90dp"
        android:layout_marginStart="91dp"
        android:layout_marginTop="9dp"
        android:contentDescription="@string/botoes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_paisesparticipantes"
        app:srcCompat="@drawable/b_calendario" />

    <ImageView
        android:id="@+id/b_audios"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="119dp"
        android:layout_marginStart="119dp"
        android:layout_marginTop="9dp"
        android:contentDescription="@string/botoes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_calendario"
        app:layout_constraintVertical_bias="0.021"
        app:srcCompat="@drawable/b_audios" />

    <TextView
        android:id="@+id/t_rodape"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="119dp"
        android:layout_marginStart="108dp"
        android:text="Powered by Moreira Labs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Powered by Moreira Labs" />

</android.support.constraint.ConstraintLayout>